<resources>

    <style name="Header">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="SearchBar.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="android:textAppearance">?textAppearanceSubtitle2</item>
        <item name="android:hint">@string/search</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="background">@color/gray</item>
        <item name="alpha">0.7</item>
    </style>


</resources>